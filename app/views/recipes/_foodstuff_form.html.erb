<%= form_for [@recipe, @foodstuff], remote: true do |f| %>
  <div class="foodstuff_form">

      <%= f.text_area :material, placeholder: "追加する材料" , class: "foodstuff_text" %>


      <%= f.text_area :quantity, placeholder: "分量", class: "foodstuff_text" %>

    <div class="actions">
      <%= f.submit "追加" %>
    </div>
  </div>
<% end %>
