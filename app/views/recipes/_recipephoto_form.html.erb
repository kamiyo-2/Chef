<div class="recipe-contents">
  <%= form_for [@recipe, @recipephoto], remote: true do |f| %>
    <div class="recipe-content-show">
      <div class='recipephoto-img'>
        <div class="image_preview", id="image-list"></div>
        <% if @recipephoto.sub_image.attached? %>
          <%= image_tag @recipephoto.sub_image, class: "user_image_index" %>
        <% else %>
          <%= image_tag ("photo.jpg") , class: "user_image_index" %> 
        <% end%>
        <%= f.file_field :sub_image %> 
      </div>
      <p class="recipephoto_texts">
        <%= f.text_area :text, placeholder: "追加する材料" , class: "recipephoto_text" %>
      </p>
      <div class="actions">
        <%= f.submit "追加する" %>
      </div>
    </div> 
  <% end %>
</div>


  