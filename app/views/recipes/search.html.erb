<div class="main_form">
  <div class="tag-inner">
    <div class="title_recipe">検索一覧</div>
      <div class="search">
        <%= form_tag(search_recipes_path,:method => 'get') do %>
          <%= text_field_tag :search, '', placeholder: "キーワード" %>
          <%= submit_tag '検索', :name => nil %>
        <% end %>
      </div>
      <div class="tag-contents">
        <% @recipes.each do |recipe| %>
          <% if recipe.status == "released" %>
            <div class="tag-content-show">
              <div class='tag-images'>
                <%= link_to image_tag(recipe.main_image), recipe_path(recipe.id), method: :get %>
              </div>
              <p class="tags_link">
                <i class="fas fa-utensils"></i>
                <%= link_to recipe.title, recipe_path(recipe.id), method: :get %>
              </p>
              <p class="tags_link">
                <i class="fas fa-user"></i>
                <%= link_to recipe.user.name, user_path(recipe.user.id), method: :get %>
              </p>
            </div> 
          <% end %>
        <% end %>
      </div>
      <a><%= link_to "戻る", root_path,  class: :root_btn %></a>
    </div>
  </div>
</div>
 
 

 