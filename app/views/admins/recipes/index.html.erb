<div class="main_form">
  <div class="tag-inner">
  <div class="title_recipe">レシピ 一覧</div>
    <div class="tag-contents">
      <div class="search">
        <%= form_tag(search_admins_recipes_path,:method => 'get') do %>
          <%= text_field_tag :search, '', placeholder: "キーワード" %>
          <%= submit_tag '検索', :name => nil %>
        <% end %>
      </div>
      <table class="tabl">
        <tr class="tables">
          <th class="table_title">レシピ名</th>
          <th class="table_title">作成者</th>
          <th class="table_title">更新日</th>
          <th class="table_title">ステータス</th>
        </tr>
        <% @recipes.each do |recipe| %>
          <tr>
            <td class="align">
              <%= link_to admins_recipe_path(recipe) do %>
                <%= recipe.title %>
              <% end %>
            </td>
            <td class="align">
              <%= link_to edit_admins_user_path(recipe.user) do %>
                <%= recipe.user.name %>
              <% end %>
            </td>
            	<td class="align"><%= recipe.updated_at.strftime('%Y/%m/%d') %></td>
            <% if recipe.status == "nonreleased" %>
              <td class="align">非公開</td>
            <% else %>
              <td class="align">公開</td>
            <%end%>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>