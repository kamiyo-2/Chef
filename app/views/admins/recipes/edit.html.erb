<div class="form_wrapper">
  <div class="form_inner">
    <div class="title-content">
      <div class="title_recipe">レシピ編集</div>
	      <%= form_for(@recipe, url: admins_recipe_path) do |f| %>
        <div class="main_contents">
          <div class="image-content">
          <div class="image_preview", id="image-list"></div>
            <%= image_tag @recipe.main_image, class: "user_image_index" %>
            <%= f.file_field :main_image %> 
             <p class="tags_link">
          <i class="fas fa-calendar-alt"></i>
          <%= l @recipe.created_at %>
              <i class="fas fa-user"></i>
              <%= link_to @recipe.user.name, edit_admins_user_path(@recipe.user.id), method: :get %>
            </p>
          </div>
          <div class="text-content">
            <div class="field">
              <%= f.label :title, "料理名" %><br />
              <%= f.text_field :title , class: :new_form_text %>
            </div>
            <div class="field">
              <%= f.label :process, "紹介文" %><br />
              <%= f.text_area :process, class: :new_form_text %>
            </div>
            <div class="field">
              <%= f.label :details, "何人前" %><br />
              <%= f.text_area :details, class: :new_form_text %>
            </div>
             <span>タグ</span>
            <div class="check_box">
              <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                <li class="tag-list">
                  <%= tag.label do %>
                    <%= tag.check_box %>
                    <%= tag.text %>
                  <% end %>
                </li>
              <% end %>
            </div>
           <div class="btn_edit_form">
            <div class="actions_edit">
              <%= f.submit "戻る", class: :form_btn  %>
            </div>
             <div class="actions_edit">
              <%= button_to '削除', recipe_path(@recipe.id), method: :delete, remote: true, data: { confirm: '削除してよろしいですか？' } , class: 'recipe_delete_btn'%>
            </div>
            </div>
      <% end %>
          <div class="title_recipe">材料</div>
              <% @foodstuffs.each do |foodstuff| %>
                <% unless foodstuff.id.nil? %>
                  <div class="foodstuff_form">
                    <div class="foodstuffs_text">
                      <p><%= foodstuff.material %></p> 
                    </div>
                    <div class="foodstuffs_texts">
                      <%= foodstuff.quantity %>
                    </div>
                  </div>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
       <div class="show_links_recipe">
      <div class="title_recipes">作り方</div>
      </div>

        
        <div class="recipe-contents">
          <% @recipephotos.each do |recipephoto| %>
            <div class="recipe-content-show">
              <div class='recipephoto-images'>
                <% if @recipephoto.sub_image.attached? %>
                  <div class='recipephoto-images'>
                    <%= image_tag recipephoto.sub_image, class: "user_image_index" %>
                  </div>
                <% else %>
                  <div class='recipephoto-img'>
                    <%= image_tag ("photo.jpg") , class: "none_image" %> 
                  </div>
                <% end%>
              </div>
              <p class="recipephoto_texts">
                <p><%= recipephoto.text %></p> 
              </p>
            </div> 
          <% end %>
        </div>
      </div>
  </div>

