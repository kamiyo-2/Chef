<div class="main_form">
  <div class="main">
    <div class="inner">
      <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="user_wapper">
          <div class="user_image">
            <p class="user_image_fild">
              <div class="image_preview", id="image-list"></div>
              <% if @user.user_image.attached? %>
                <%= image_tag @user.user_image , class: "photo"%> 
              <% else %>
                <%= image_tag 'photo.jpg',class: "photo" %>
              <% end%>
              <%= f.file_field :user_image %> 
            </p>

          </div>
          <div class="user_form">
            <div class="align-middle">名前</div>
            <%= f.text_field :name, class: "user_text" %>
            <div class="align-middle">部署</div>
            <%= f.text_field :department, class: "user_text" %>
            <div class="align-middle">自己紹介</div>
            <%= f.text_area :profile, rows:"2",class: "user_text", style:"height:100px" %>
            <div class="align-middle">メールアドレス</div>
            <%= f.text_field :email, class: "user_text" %>
            <div class="button_form">
              <%= f.submit "Update", class: 'button'%>
              <%=link_to user_path(current_user.id), method: :delete  do %>
              <button class="btn_delete" >Delete</button>
              <%end%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>